<script>
document.addEventListener("DOMContentLoaded", () => {
  // Find alle elementer som har en klasse der starter med "animate-"
  const candidates = Array.from(document.querySelectorAll('[class*="animate-"]'))
    .filter(el => Array.from(el.classList).some(c => c.startsWith("animate-") || c === "animate"));

  // Gem animation-klasserne og fjern dem, sæt elementet skjult initialt
  candidates.forEach(el => {
    const animClasses = Array.from(el.classList).filter(c => c.startsWith("animate-") || c === "animate");
    if (animClasses.length === 0) return;
    el.dataset.__anim = animClasses.join(" ");
    animClasses.forEach(c => el.classList.remove(c));
    if (!el.classList.contains("opacity-0")) el.classList.add("opacity-0");
  });

  // Parse tid (f.eks. "200ms" eller "2s")
  const parseTimeSec = (str) => {
    if (!str) return 0;
    str = str.trim();
    if (str.endsWith("ms")) return parseFloat(str) / 1000;
    if (str.endsWith("s")) return parseFloat(str);
    return parseFloat(str);
  };

  const observer = new IntersectionObserver((entries, obs) => {
    entries.forEach(entry => {
      if (!entry.isIntersecting) return;
      const el = entry.target;
      const stored = el.dataset.__anim;
      if (!stored) {
        obs.unobserve(el);
        return;
      }

      // Gen-tilføj animation-klasser
      stored.split(" ").forEach(c => el.classList.add(c));

      // Læs faktiske CSS animation-duration og animation-delay fra computed style
      const cs = getComputedStyle(el);
      const durations = cs.animationDuration ? cs.animationDuration.split(",") : ["0s"];
      const delays = cs.animationDelay ? cs.animationDelay.split(",") : ["0s"];

      // For hver animation (der kan være flere comma-separated) beregn total tid (delay + duration)
      const times = durations.map((d, i) => {
        const dur = parseTimeSec(d);
        const del = parseTimeSec(delays[i] ? delays[i] : delays[0]);
        return dur + del;
      });
      const maxTime = Math.max(...times, 0);

      // Når animationen er færdig, fjern opacity-0 så elementet forbliver synligt
      // små ekstra 50ms buffer for sikkerhed
      setTimeout(() => {
        el.classList.remove("opacity-0");
      }, Math.round(maxTime * 1000) + 50);

      obs.unobserve(el); // kun én gang
    });
  }, { threshold: 0.12 });

  // Start observing
  candidates.forEach(el => observer.observe(el));
});
</script>


